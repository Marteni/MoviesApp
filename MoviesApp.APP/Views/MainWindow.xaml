<Window x:Class="MoviesApp.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:MoviesApp.App.ViewModels"
        xmlns:views="clr-namespace:MoviesApp.APP.Views"
        mc:Ignorable="d"
        Title="Movies Application" Height="700" Width="1000"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
        DataContext="{Binding Source={StaticResource mainViewModelLocator}, Path=MainViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBox Height="25" 
                     VerticalAlignment="Top"
                     Margin="0,0.5"
                     Text="{Binding SearchQuery}"/>
            <Button Height="30"
                    Content="Search"
                    Margin="0,0,0,1"
                    Command="{Binding SearchCommand}"></Button>
            <ListBox Height="300"></ListBox>
        </StackPanel>

        <TabControl Grid.Column="1" 
                    Grid.Row="0"
                    SelectedIndex="{Binding TabItem}">

            <TabItem Header="Movies" >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="600"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="281*" />
                        <ColumnDefinition Width="563*"/>

                    </Grid.ColumnDefinitions>


                    <views:MovieListView Grid.Column="0"/>
                    <views:MovieDetailView  Grid.Column="1"/>
                    <views:MovieDetailEditView  Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Actors/Directors" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="600"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <views:PersonListView Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"/>
                    <views:PersonDetailView Grid.Row="0" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="281,0,0,0"/>
                    <views:PersonDetailEditView Grid.Row="0" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="281,0,0,0"/>
                </Grid>

            </TabItem>

        </TabControl>



    </Grid>
</Window>
